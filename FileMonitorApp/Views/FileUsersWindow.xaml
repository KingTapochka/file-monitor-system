<Window x:Class="FileMonitorApp.Views.FileUsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FileMonitorApp.Models"
        Title="File Monitor - История проверок файлов" 
        Height="600" 
        Width="1000"
        MinHeight="450"
        MinWidth="850"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#EEE"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
        </Style>
        
        <Style x:Key="HeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
        </Style>
        
        <Style x:Key="CellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="#333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <DockPanel Grid.Row="0" Margin="0,0,0,15">
            <Button DockPanel.Dock="Right"
                    Content="Очистить историю" 
                    Padding="10,6"
                    Background="#F44336"
                    Foreground="White"
                    BorderThickness="0"
                    Click="ClearHistory_Click"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D32F2F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <StackPanel>
                <TextBlock Text="История проверок файлов" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="#333"/>
                <TextBlock x:Name="FileCountText"
                           Text="Проверено файлов: 0"
                           FontSize="12"
                           Foreground="#666"
                           Margin="0,3,0,0"/>
            </StackPanel>
        </DockPanel>
        
        <!-- Контент (TreeView / сообщения) -->
        <Grid Grid.Row="2">
            <!-- Индикатор загрузки -->
            <StackPanel x:Name="LoadingPanel" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Visibility="Collapsed">
                <TextBlock Text="⏳" FontSize="48" HorizontalAlignment="Center"/>
                <TextBlock Text="Загрузка информации..." 
                           FontSize="14" 
                           Foreground="#666"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
            
            <!-- TreeView для группированного списка -->
            <TreeView x:Name="FileTreeView"
                      Background="White"
                      BorderBrush="#DDD"
                      BorderThickness="1"
                      Padding="5">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="IsExpanded" Value="True"/>
                        <Setter Property="Padding" Value="5,3"/>
                        <Setter Property="FontSize" Value="13"/>
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.Resources>
                    <!-- Шаблон для файла (родительский узел) -->
                    <HierarchicalDataTemplate DataType="{x:Type local:FileCheckResult}" ItemsSource="{Binding Users}">
                        <Border Background="#F5F5F5" 
                                Padding="10,8" 
                                Margin="0,2"
                                CornerRadius="4">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Right"
                                           Text="{Binding StatusText}"
                                           FontSize="11"
                                           Foreground="#666"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"/>
                                <TextBlock Text="{Binding FilePath}"
                                           FontWeight="SemiBold"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"
                                           Margin="5,0,0,0"
                                           ToolTip="{Binding FilePath}"/>
                            </DockPanel>
                        </Border>
                    </HierarchicalDataTemplate>
                    
                    <!-- Шаблон для пользователя (дочерний узел) -->
                    <DataTemplate DataType="{x:Type local:FileUserInfo}">
                        <Border Background="White" 
                                Padding="10,6" 
                                Margin="5,1"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="3">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding UserName}"
                                               FontWeight="SemiBold"
                                               FontSize="12"/>
                                    <TextBlock Text="{Binding ClientName}"
                                               FontSize="11"
                                               Foreground="#666"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </TreeView.Resources>
            </TreeView>
            
            <!-- Сообщение: нет истории -->
            <StackPanel x:Name="NoHistoryPanel"
                        Visibility="Collapsed"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                <TextBlock Text="" FontSize="64" HorizontalAlignment="Center"/>
                <TextBlock Text="История проверок пуста" 
                           FontSize="16" 
                           Foreground="#666"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0"/>
                <TextBlock Text="Проверьте файл через контекстное меню или горячую клавишу Win+Shift+F" 
                           FontSize="13" 
                           Foreground="#999"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="400"
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Сообщение об ошибке -->
            <StackPanel x:Name="ErrorPanel"
                        Visibility="Collapsed"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                <TextBlock Text="❌" FontSize="64" HorizontalAlignment="Center"/>
                <TextBlock Text="Ошибка при получении данных" 
                           FontSize="16" 
                           Foreground="#F44336"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0"/>
                <TextBlock x:Name="ErrorMessage"
                           Text="Не удалось подключиться к серверу" 
                           FontSize="13" 
                           Foreground="#666"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="400"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button x:Name="RefreshLastButton"
                    Content="Обновить последний" 
                    Style="{StaticResource PrimaryButton}"
                    Width="160"
                    Click="RefreshLast_Click"/>
            <Button Content="Закрыть" 
                    Width="100" 
                    Margin="10,0,0,0"
                    Padding="15,8"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
